doctype html

.public-lists-component
  md-backdrop-component(title="Chimerical Conversions" subtitle="Public Converter Lists")
    .options
    ul.list(#list)
      // Converters
      li(*ngFor="let l of listsService.publicLists")
        list(bind-list="l")

      // Skeleton screen
      each i in [0]
        li(*ngIf="loading")
          skeleton-list
